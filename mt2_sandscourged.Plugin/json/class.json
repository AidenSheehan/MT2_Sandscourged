{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "classes": [
        {
            "id": "ClassSandscourged",
            "titles": {
                "english": "Sandscourged"
            },
            "descriptions": {
                "english": "Lead the warriors of Limbo, revenants serving an ancient power, as they call upon the warping sands of Oblivion."
            },
            "subclass_descriptions": {
                "english": "Subclass description"
            },
            "icons": {
                "small": "@ClanLogo_48",
                "medium": "@ClanLogo_92_Outline",
                "large": "@ClanLogo_128",
                "silhouette": "@ClanLogo_Silhouette"
            },
            "card_style": "pyreborne",
            "ui_color": {
                "r": 0.91,
                "g": 0.76,
                "b": 0.24
            },
            "ui_color_dark": {
                "r": 0.50,
                "g": 0.42,
                "b": 0.15
            },
            "ui_gradient": [
                {
                    "time": 0.0,
                    "color": {
                        "r": 1.0
                    }
                },
                {
                    "time": 1.0,
                    "color": {
                        "r": 0.91,
                        "g": 0.76,
                        "b": 0.24
                    }
                }
            ],
            "champions": [
                {
                    "id": "PharaohChampion",
                    "card_data": "@SpawnPharaoh",
                    "starter_card": "@SpawnReveredScarab",
                    "upgrade_tree": [
                        [
                            "@upg_SwarmLord1",
                            "@upg_SwarmLord2",
                            "@upg_SwarmLord3"
                        ],
                        [
                            "@upg_Pearlescent1",
                            "@upg_Pearlescent2",
                            "@upg_Pearlescent3"
                        ],
                        [
                            "@upg_SoulTender1",
                            "@upg_SoulTender2",
                            "@upg_SoulTender3"
                        ]
                    ],
                    "icon": "@icon_Pharaoh",
                    "portrait": "@icon_Pharaoh"
                },
                {
                    "id": "VizierChampion",
                    "card_data": "@SpawnVizier",
                    "starter_card": "@Beseech",
                    "upgrade_tree": [
                        [
                            "@upg_FirstBlessed1",
                            "@upg_FirstBlessed2",
                            "@upg_FirstBlessed3"
                        ],
                        [
                            "@upg_EvilEye1",
                            "@upg_EvilEye2",
                            "@upg_EvilEye3"
                        ],
                        [
                            "@upg_StormSplitter1",
                            "@upg_StormSplitter2",
                            "@upg_StormSplitter3"
                        ]
                    ],
                    "icon": "@icon_Vizier",
                    "portrait": "@icon_Vizier"
                }
            ],
            "is_crew": false,
            "class_select_character_displays": [
                "@PharaohClassDisplayCharacterArt",
                "@VizierClassDisplayCharacterArt"
            ]
        }
    ],
    "map_nodes": [
        {
            "id": "RewardNodeUnitPackSandscourged",
            "type": "reward",
            "map_icon": "@ClanLogo_48",
            "minimap_icon": "@ClanLogo_48",
            "prefab": "@SandscourgedMapIcon",
            "titles": {
                "english": "Sandscourged Banner",
                "chinese": "Sandscourged战旗"
            },
            "descriptions": {
                "english": "Hire a Sandscourged Unit",
                "chinese": "获得一个Sandscourged单位。"
            },
            "pools": [
                "RandomChosenMainClassUnit",
                "RandomChosenSubClassUnit"
            ],
            "is_banner_node": true,
            "extensions": [
                {
                    "reward": {
                        "class": "@ClassSandscourged",
                        "rewards": [
                            {
                                "id": "@SandscourgedBannerReward"
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "card_pools": [
        {
            "id": "SandscourgedBannerCardPool",
            "cards": [
                "@SpawnEvermaw",
                "@SpawnSuperiorEgo",
                "@SpawnRevenant",
                "@SpawnForgottenHulk",
                "@SpawnTwistedHusk",
                "@SpawnOverseerEternal",
                "@SpawnPriestOfLostThoughts",
                "@SpawnPearlHost",
                "@SpawnSphinxHierarch"
            ]
        }
    ],
    "rewards": [
        {
            "id": "SandscourgedBannerReward",
            "type": "draft",
            "costs": [
                100
            ],
            "extensions": [
                {
                    "draft": {
                        "draft_pool": "@SandscourgedBannerCardPool",
                        "class_type": "main|subclass|nonclass",
                        "draft_options_count": 2,
                        "rarity_floor": "uncommon",
                        "ignore_relic_rarity_override": true,
                        "is_service_merchant_reward": true
                    }
                }
            ]
        }
    ],
    "subtypes": [
        {
            "id": "Sub_Scarab",
            "names": {
                "english": "Scarab"
            }
        },
        {
            "id": "Sub_Lost",
            "names": {
                "english": "Lost"
            }
        },
        {
            "id": "Sub_Ego",
            "names": {
                "english": "Ego"
            }
        }
    ],
    "game_objects": [
        {
            "id": "SandscourgedMapIcon",
            "type": "map_node_icon",
            "extensions": {
                "map_node_icon": {
                    "disabled_sprite": "@Sandscourged_Disabled",
                    "enabled_sprite": "@Sandscourged_Enabled",
                    "frozen_sprite": "@Sandscourged_Frozen",
                    "visited_sprite_disabled": "@Sandscourged_VisitedDisabled",
                    "visited_sprite_enabled": "@Sandscourged_VisitedEnabled"
                }
            }
        },
        {
            "id": "PharaohClassDisplayCharacterArt",
            "type": "character_art",
            "extensions": {
                "character_art": {
                    "sprite": "@PharaohCharacterArt",
                    "transform": {
                        "position": {
                            "x": 1.7,
                            "y": 0.9,
                            "z": 0
                        },
                        "scale": {
                            "x": 2.7,
                            "y": 2.7,
                            "z": 1
                        }
                    }
                }
            }
        },
        {
            "id": "VizierClassDisplayCharacterArt",
            "type": "character_art",
            "extensions": {
                "character_art": {
                    "sprite": "@VizierCharacterArt",
                    "transform": {
                        "position": {
                            "x": 2.1,
                            "y": 0.8,
                            "z": 0
                        },
                        "scale": {
                            "x": 2.5,
                            "y": 2.5,
                            "z": 1
                        }
                    }
                }
            }
        }
    ],
    "sprites": [
        {
