{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "cards": [
        {
            "id": "SpawnOverseerEternal",
            "names": {
                "english": "Overseer Eternal",
                "chinese": "不朽监督者"
            },
            "card_art": "@OverseerEternal",
            "cost": 1,
            "card_type": "monster",
            "rarity": "uncommon",
            "class": "@ClassSandscourged",
            "targets_room": true,
            "effects": [
                "@SpawnOverseerEternal"
            ],
            "lore_tooltips": [
                {
                    "english": "Eternals are a class of Ego with myriad Lost minds bound to their own. They are forbidden from dying, and are permitted to use any means necessary to ensure their survival, for the sake of preserving the Lost within them."
                }
            ],
            "pools": [
                "UnitsAllBanner"
            ]
        }
    ],
    "characters": [
        {
            "id": "OverseerEternal",
            "size": 2,
            "attack_damage": 5,
            "health": 25,
            "names": {
                "english": "Overseer Eternal",
                "chinese": "不朽监督者"
            },
            "character_art": "@OverseerEternalCharacterArt",
            "subtypes": [
                "SubtypesData_BannerUnit",
                "@Sub_Ego"
            ],
            "triggers": [
                "@OverseerEternalTrigger"
            ]
        }
    ],
    "character_triggers": [
        {
            "id": "OverseerEternalTrigger",
            "descriptions": {
                "english": "Gain +[effect0.upgrade.bonusdamage][attack] and [lifesteal] [effect1.status0.power].",
