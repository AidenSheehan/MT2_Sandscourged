{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "cards": [
        {
            "id": "SpawnInfestedMummy",
            "names": {
                "english": "Infested Mummy"
            },
            "card_art": "@InfestedMummy",
            "cost": 1,
            "card_type": "monster",
            "rarity": "uncommon",
            "class": "@ClassSandscourged",
            "unlock_level": 0,
            "targets_room": true,
            "pools": [
                "UnitsAllBanner"
            ],
            "effects": [
                {
                    "id": "@SpawnInfestedMummy"
                }
            ],
            "lore_tooltips": [
                {
                    "english": "Forgotten vessels that are too frail to withstand tapping are instead, by the Ur-Pharaoh's mandate, used as nurseries for their divine spawn."
                }
            ]
        }
    ],
    "characters": [
        {
            "id": "InfestedMummy",
            "size": 1,
            "attack_damage": 15,
            "health": 5,
            "names": {
                "english": "Infested Mummy"
            },
            "character_art": "@InfestedMummyCharacterArt",
            "subtypes": [
                "@Sub_Forgotten",
                "SubtypesData_BannerUnit"
            ],
            "triggers": [
                {
                    "id": "@InfestedMummyTrigger"
                }
            ]
        }
    ],
    "character_triggers": [
        {
            "id": "InfestedMummyTrigger",
            "descriptions": {
                "english": "Summon a <b>Revered Scarab</b> with this unit's upgrades and stat changes."
            },
            "trigger": "on_death",
            "effects": [
                {
                    "id": "@InfestedMummySpawnScarabs"
                }
            ]
        }
    ],
    "effects": [
        {
            "id": "SpawnInfestedMummy",
            "name": "CardEffectSpawnMonster",
            "target_mode": "room",
            "param_character": "@InfestedMummy"
        },
        {
            "id": "InfestedMummySpawnScarabs",
            "name": "CardEffectSpawnMonster",
            "target_mode": "drop_target_character",
            "param_character": "@ReveredScarab",
            "param_int": 1,
            "param_bool": false
        }
    ],
    "sprites": [
        {
            "id": "InfestedMummy",
            "path": "textures/InfestedMummyCardArt.png"
        },
        {
            "id": "InfestedMummyCharacterArt",
            "path": "textures/InfestedMummyCharacterArt.png"
        }
    ],
    "game_objects": [
        {
            "id": "InfestedMummy",
            "type": "card_art",
            "extensions": {
                "card_art": {
                    "sprite": "@InfestedMummy"
                }
            }
        },
        {
            "id": "InfestedMummyCharacterArt",
            "type": "character_art",
            "extensions": {
                "character_art": {
                    "sprite": "@InfestedMummyCharacterArt"
                }
            }
        }
    ]
}