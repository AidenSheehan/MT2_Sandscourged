{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "cards": [
        {
            "id": "SpawnForgottenHulk",
            "names": {
                "english": "Forgotten Hulk"
            },
            "lore_tooltips": [
                {
                    "english": "However mighty this creature once was, now it is reduced to a warped mass of flesh and sinew."
                }
            ],
            "card_art": "@ForgottenHulk",
            "cost": 2,
            "card_type": "monster",
            "rarity": "uncommon",
            "class": "@ClassSandscourged",
            "unlock_level": 4,
            "targets_room": true,
            "pools": [
                "UnitsAllBanner"
            ],
            "effects": [
                {
                    "id": "@SpawnForgottenHulk"
                }
            ]
        }
    ],
    "characters": [
        {
            "id": "ForgottenHulk",
            "size": 3,
            "attack_damage": 0,
            "health": 40,
            "names": {
                "english": "Forgotten Hulk"
            },
            "character_art": "@ForgottenHulkCharacterArt",
            "subtypes": [
                "@Sub_Forgotten",
                "SubtypesData_BannerUnit"
            ],
            "triggers": [
                {
                    "id": "@ForgottenHulkRevengeTrigger"
                },
                {
                    "id": "@ForgottenHulkAccursedTrigger"
                }
            ]
        }
    ],
    "character_triggers": [
        {
            "id": "ForgottenHulkRevengeTrigger",
            "descriptions": {
                "english": "Apply [corruption] [effect0.status0.power] to the attacker."
            },
            "trigger": "on_hit",
            "effects": [
                {
                    "id": "@ForgottenHulkApplyCorruption"
                }
            ]
        },
        {
            "id": "ForgottenHulkAccursedTrigger",
            "descriptions": {
                "english": "Gain [undying] [effect0.status0.power]."
            },
            "trigger": {
                "id": "@Accursed",
                "mod_reference": "Conductor"
            },
            "effects": [
                {
                    "id": "@ForgottenHulkGainReanimate"
                }
            ]
        }
    ],
    "effects": [
        {
            "id": "SpawnForgottenHulk",
            "name": "CardEffectSpawnMonster",
            "target_mode": "room",
            "param_character": "@ForgottenHulk"
        },
        {
            "id": "ForgottenHulkApplyCorruption",
            "name": "CardEffectAddStatusEffect",
            "target_mode": "last_attacker_character",
            "param_status_effects": [
                {
                    "status": "corruption",
                    "count": 5
                }
            ]
        },
        {
            "id": "ForgottenHulkGainReanimate",
            "name": "CardEffectAddStatusEffect",
            "target_mode": "self",
            "param_status_effects": [
                {
                    "status": "undying",
                    "count": 1
                }
            ]
        }
    ],
    "sprites": [
        {
            "id": "ForgottenHulk",
            "path": "textures/ForgottenHulkCardArt.png"
        },
        {
            "id": "ForgottenHulkCharacterArt",
            "path": "textures/ForgottenHulkCharacterArt.png"
        }
    ],
    "game_objects": [
        {
            "id": "ForgottenHulk",
            "type": "card_art",
            "extensions": {
                "card_art": {
                    "sprite": "@ForgottenHulk"
                }
            }
        },
        {
            "id": "ForgottenHulkCharacterArt",
            "type": "character_art",
            "extensions": {
                "character_art": {
                    "sprite": "@ForgottenHulkCharacterArt"
                },
                "transform": {
                    "position": {
                        "x": 0,
                        "y": 0,
                        "z": 0
                    },
                    "scale": {
                        "x": 1.2,
                        "y": 1.2,
                        "z": 1.2
                    }
                }
            }
        }
    ]
}