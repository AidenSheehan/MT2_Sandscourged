            },
            "lore_tooltips": [
                {
                    "english": "For the aeons the Scourged were bound by Oblivion's storm, not one soul in Limbo ever found them. Now they wield the same sands that once veiled and warped them as a terrifying weapon."
                }
            ],
            "rarity": "common",
            "class": "@ClassSandscourged",
            "card_art": "@SandstormArt",
            "targets_room": true,
            "targetless": true,
            "pools": [
                "MegaPool"
            ],
            "cost": 3,
            "traits": [
                "@SandstormOffering"
            ],
            "effects": [
                "@SandstormDealDamage",
                "@SandstormApplyScourge"
            ]
        }
    ],
    "traits": [
        {
            "id": "SandstormOffering",
            "name": "CardTraitTreasure"
        }
    ],
    "effects": [
        {
            "id": "SandstormDealDamage",
            "name": "CardEffectDamage",
            "target_mode": "room",
            "target_team": "heroes",
            "param_int": 10
        },
        {
            "id": "SandstormApplyScourge",
            "name": "CardEffectAddStatusEffect",
            "target_mode": "room",
            "target_team": "heroes",
            "param_status_effects": [
