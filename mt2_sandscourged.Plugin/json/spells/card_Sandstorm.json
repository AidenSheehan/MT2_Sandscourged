{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "cards": [
        {
            "id": "Sandstorm",
            "names": {
                "english": "Sandstorm",
                "chinese": "沙尘暴"
            },
            "descriptions": {
                "english": "Deal [effect0.power] damage to enemy units and apply [mt2_sandscourged.Plugin_scourge] [effect1.status0.power].",
