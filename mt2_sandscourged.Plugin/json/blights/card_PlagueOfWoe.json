{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "cards": [
        {
            "id": "PlagueOfWoe",
            "names": {
                "english": "Plague of Woe"
            },
            "descriptions": {
                "english": "Draw a spell and apply -[effect1.upgrade.costreduction][ember] and +[effect1.upgrade.bonusdamage] [magicpower]."
            },
            "rarity": "uncommon",
            "class": "@ClassSandscourged",
            "card_art": "@PlagueOfWoeArt",
            "card_type": "blight",
            "targets_room": true,
            "targetless": false,
            "pools": [
                "MegaPool"
            ],
            "cost": 0,
            "effects": [
                {
                    "id": "@PlagueOfWoeSacrifice"
                },
                {
                    "id": "@PlagueOfWoeBuffSpell"
                },
                {
                    "id": "@PlagueOfWoeDrawSpell"
                }
            ],
            "triggers": ["@VexationDamageOnUnplayed"]
        }
    ],
    "traits": [
        {
            "id": "PlagueOfWoeShowTargets",
            "name": "CardTraitShowCardTargets"
        }
    ],
    "effects": [
        {
            "id": "PlagueOfWoeSacrifice",
            "name": "CardEffectSacrifice",
            "target_mode": "drop_target_character",
            "target_team": "monsters",
            "param_int": 1
        },
        {
            "id": "PlagueOfWoeBuffSpell",
            "name": "CardEffectAddTempCardUpgradeToNextDrawnCard",
            "target_card_type": "spell",
            "param_upgrade": "@PlagueOfWoeSpellUpgrade"
        },
        {
            "id": "PlagueOfWoeDrawSpell",
            "name": "CardEffectDrawType",
            "target_mode": "draw_pile",
            "target_team": "none",
            "target_card_type": "spell",
            "param_int": 1
        }
    ],
    "upgrades": [
        {
            "id": "PlagueOfWoeSpellUpgrade",
            "bonus_damage": 20,
            "bonus_heal": 20,
            "cost_reduction": 2
        }
    ],
    "sprites": [
        {
            "id": "PlagueOfWoeArt",
            "path": "textures/PlagueOfWoeArt.png"
        }
    ],
    "game_objects": [
        {
            "id": "PlagueOfWoeArt",
            "type": "card_art",
            "extensions": {
                "card_art": {
                    "sprite": "@PlagueOfWoeArt"
                }
            }
        }
    ]
}