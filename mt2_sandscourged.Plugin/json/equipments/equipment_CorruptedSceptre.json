{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "cards": [
        {
            "id": "CorruptedSceptre",
            "names": {
                "english": "Corrupted Sceptre"
            },
            "lore_tooltips": [
                {
                    "english": "This curious sceptre bears faded glyphs that seems to predate even the Ur-Pharaoh. They show a bird perched atop a man, with the man's words drowned out by the bird's song. Whoever this man was, he has been long forgotten."
                }
            ],
            "card_type": "equipment",
            "rarity": "rare",
            "class": "@ClassSandscourged",
            "unlock_level": 3,
            "card_art": "@CorruptedSceptreArt",
            "targets_room": true,
            "targetless": false,
            "pools": [
                "MegaPool",
                "RoomAndEquipmentMerchant_EquipmentPool",
                "RoomAndEquipmentDraftPool",
                "RoomAndEquipmentMerchant_RoomAndEquipmentPool",
                "EquipmentPoolNonEnemy",
                "FreeEquipmentMutatorPool",
                "RedCrownEquipmentPool",
                "RandomGraftedEquipmentForEvent_NoVoidArms_EquipmentPool"
            ],
            "cost": 3,
            "effects": [
                "@Equip_CorruptedSceptre"
            ]
        }
    ],
    "upgrades": [
        {
            "id": "upg_CorruptedSceptre",
            "bonus_damage": 5,
            "bonus_hp": 0,
            "trigger_upgrades": [
                "@CorruptedSceptreStrikeTrigger"
            ],
            "icon": "@CorruptedSceptreArt"
        }
    ],
    "character_triggers": [
        {
            "id": "CorruptedSceptreStrikeTrigger",
            "descriptions": {
                "english": "Apply [mt2_sandscourged.Plugin_scourge] [effect0.status0.power] to the attacked unit, then double the amount of [mt2_sandscourged.Plugin_scourge] on all units."
            },
            "trigger": "on_attacking",
            "effects": [
                "@CorruptedSceptreApplyScourge",
                "@CorruptedSceptreDoubleScourge"
            ]
        }
    ],
    "effects": [
        {
            "id": "Equip_CorruptedSceptre",
            "name": "CardEffectAttachEquipment",
            "target_mode": "drop_target_character",
            "target_team": "monsters",
            "param_upgrade": "@upg_CorruptedSceptre"
        },
        {
            "id": "CorruptedSceptreApplyScourge",
            "name": "CardEffectAddStatusEffect",
            "target_mode": "last_attacked_character",
            "target_team": "both",
            "param_status_effects": [
                {
                    "status": "@scourge",
                    "count": 15
                }
            ]
        },
        {
            "id": "CorruptedSceptreDoubleScourge",
            "name": "CardEffectMultiplyStatusEffect",
            "target_mode": "room",
            "target_team": "both",
            "param_status_effects": [
                {
                    "status": "@scourge",
                    "count": 2
                }
            ]
        }
    ],
    "sprites": [
        {
            "id": "CorruptedSceptreArt",
            "path": "textures/CorruptedSceptreArt.png"
        }
    ],
    "game_objects": [
        {
            "id": "CorruptedSceptreArt",
            "type": "card_art",
            "extensions": {
                "card_art": {
                    "sprite": "@CorruptedSceptreArt"
                }
            }
        }
    ]
}